<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<bean id="handler" class="com.myking520.github.handler.DispatchHandler" />
	<bean id="protocolCodecFilter" class="org.apache.mina.filter.codec.ProtocolCodecFilter">
		<constructor-arg>
			<ref bean="codecFactory" />
		</constructor-arg>
	</bean>
	<bean id="codecFactory" class="com.myking520.github.codec.DefaultProtocolCodecFactory">
		<property name="decoder" ref="decoder" />
		<property name="encoder" ref="encoder" />
	</bean>
	<bean id="decoder" class="com.myking520.github.codec.protocolbuffer.ProtocolBufferDecoder"> </bean>
	<bean id="encoder" class="com.myking520.github.codec.protocolbuffer.ProtocolBufferEncoder"> </bean>
	<bean id="filterChainBuilder"
		class="org.apache.mina.core.filterchain.DefaultIoFilterChainBuilder">
		<property name="filters">
			<map>
				<entry key="codec" value-ref="protocolCodecFilter" />
			</map>
		</property>
	</bean>
</beans>